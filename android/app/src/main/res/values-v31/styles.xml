<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema de splash screen para Android 12+ (API 31+) que mantiene AppCompat -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Fondo blanco -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <!-- Logo centrado -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logosexta</item>
        <!-- Duración de la animación del logo (en ms) -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <!-- Color del ícono si es vectorial -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/splash_icon_background</item>
        <!-- Branding opcional -->
        <item name="android:windowSplashScreenBrandingImage">@drawable/logosexta</item>
        <!-- Configuraciones AppCompat -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>

